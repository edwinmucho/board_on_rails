<h1><%= @post.title%></h1>
<p><%=@post.content%></p>
<p><%=@post.user.email%></p>
<a href='/post/modify/<%=@id%>'>[수정]</a>
<a href='/post/destroy/<%=@id%>'>[삭제]</a>

<!--댓글 다는 Form-->
<form action='/post/create_comment'>
    <input type='hidden' name='post_id' value='<%=@post.id%>'>
    <input type='text' name='comment'>
    <input type='submit' value='댓글달기'>
</form>

<%@comment.each do |c|%>
<p><%=c.content%></p>
<%end%>